<div class="home-page-table">
  <div class="home-page-content tk-europa text-uppercase animated bounceInDown">
    <h1>Create Google Calendar Events With SMS</h1>
    <br>
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="sign-up-form animated flipInX">
            <form class="form">
              <%= form_for @user do %>
              <% end %>

              <div class="input-group">
                <div class="input-group-addon">
                  <%=  icon('phone') %>
                </div>
                <input type="phone" class="form-control" id="phone" placeholder="Your digits">
              </div>
              <div class="input-group">
                <div class="input-group-addon">
                  <%=  icon('user') %>
                </div>
                <input type="text" class="form-control" placeholder="What do you want us to call you?">
              </div>
              <div class="input-group">
                <div class="input-group-addon">
                  <%=  icon('lock') %>
                </div>
                <input type="password" class="form-control" placeholder="Secret code">
              </div>
              <div class="input-group">
                <div class="input-group-addon">
                  <%=  icon('lock') %>
                </div>
                <input type="password" class="form-control" placeholder="Let's double check that secret code">
              </div>
            </form>
          </div>
          <%= link_to 'Start creating events in 1 minute', sign_up_url,
            class: 'btn btn-primary btn-lg btn-block text-uppercase', remote: true, id: 'signupButton' %>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#phone').mask("(999) 999-9999", {placeholder: " "});
  });
</script>
